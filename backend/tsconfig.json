{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.mts",
  ],
  "exclude": [
    "node_modules"
  ]
}